# Arquivo de configuração para ambiente de teste
# Este arquivo é usado especificamente para testes de integração

# ============================================================================
# CONFIGURAÇÕES DO MYSQL (TESTE)
# ============================================================================

MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=sicooperative_test
MYSQL_USER=test_user
MYSQL_PASS=test_password

# ============================================================================
# CONFIGURAÇÕES DO SPARK (TESTE)
# ============================================================================

SPARK_APP_NAME=SiCooperative-ETL-Test
SPARK_MASTER=local[*]
SPARK_DRIVER_MEMORY=1g
SPARK_EXECUTOR_MEMORY=1g

# Otimizações para ambiente de teste
SPARK_SQL_ADAPTIVE_ENABLED=true
SPARK_SQL_ADAPTIVE_COALESCE_PARTITIONS=true

# ============================================================================
# CONFIGURAÇÕES DE OUTPUT (TESTE)
# ============================================================================

OUTPUT_DIR=./test_output
OUTPUT_FILENAME=movimento_flat.csv
OUTPUT_MODE=overwrite
OUTPUT_HEADER=true
OUTPUT_DELIMITER=,
OUTPUT_ENCODING=UTF-8
OUTPUT_FORMAT=csv

# Configurações do Parquet
PARQUET_COMPRESSION=snappy

# ============================================================================
# CONFIGURAÇÕES DE LOGGING (TESTE)
# ============================================================================

LOG_LEVEL=INFO

# ============================================================================
# CONFIGURAÇÕES DE LGPD (TESTE)
# ============================================================================

HASH_SALT=test_salt_12345

# ============================================================================
# CONFIGURAÇÕES DE QUALIDADE DE DADOS (TESTE)
# ============================================================================

DATA_QUALITY_CHECKS_ENABLED=true
NULL_CHECK_THRESHOLD_CARTAO=0.01
NEGATIVE_TRANSACTIONS_THRESHOLD=0.0
VOLUME_CHANGE_TOLERANCE=0.5
DATA_QUALITY_HISTORY_FILE=test_data_quality_history.json

# ============================================================================
# CONFIGURAÇÕES DE OBSERVABILIDADE (TESTE)
# ============================================================================

OBSERVABILITY_ENABLED=true
PROMETHEUS_GATEWAY_URL=
PROMETHEUS_JOB_NAME=sicooperative-etl-test
METRICS_DETAILED_LOGGING=false
METRICS_EXPORT_FILE=test_pipeline_metrics.json

# ============================================================================
# CONFIGURAÇÕES DE PARTICIONAMENTO JDBC (TESTE)
# ============================================================================

JDBC_PARTITIONING_ENABLED=true
JDBC_PARTITION_COLUMN=id
JDBC_LOWER_BOUND=1
JDBC_UPPER_BOUND=1000
JDBC_NUM_PARTITIONS=4
JDBC_PARTITIONED_TABLES=movimento,cartao,conta
